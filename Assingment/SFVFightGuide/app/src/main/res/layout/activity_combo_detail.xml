<!-- Scroll view to allow users to scroll when the page is full -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="hamza.assignment.sfvfightguide.ComboDetailActivity">

        <!-- Characters name -->
        <!-- Giving an id to reference in the java file -->
        <TextView
            android:id="@+id/name"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Image of character -->
        <!-- Giving an id to reference in the java file -->
        <ImageView
            android:id="@+id/photo"
            android:layout_width="300dp"
            android:layout_height="250dp"/>

        <!-- V Trigger Label-->
        <TextView
            android:text="@string/vTrigger_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- V Trigger -->
        <TextView
            android:id="@+id/vTrigger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Specials Label -->
        <TextView
            android:text="@string/specials_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Specials -->
        <TextView
            android:id="@+id/specials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Critical Art Label -->
        <TextView
            android:text="@string/criticalArt_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Critical Art -->
        <!-- Giving an id to reference in the java file -->
        <TextView
            android:id="@+id/criticalArt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>