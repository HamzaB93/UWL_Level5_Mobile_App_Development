<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Frame layout will be used to display the fragment -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:text="New Button"
            android:id="@+id/button"
            android:layout_gravity="left|center_vertical" />
    </FrameLayout>

    <!-- ListView describes the drawer -->
    <!-- The width of the drawer is the width when its open -->
    <!-- layout_gravity start is where the drawer will be placed-->
    <!-- choice mode single choice means select one item at a time-->
    <!-- divider and background has no lines and has a certain color-->
    <!-- Will be populated -->
    <ListView
        android:id="@+id/drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#ffffff"/>

</android.support.v4.widget.DrawerLayout>
